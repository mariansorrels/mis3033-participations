<Window x:Class="NewPokemonAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewPokemonAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstPokemon" Margin="32,32,525,34" SelectionChanged="lstPokemon_SelectionChanged"/>
        <Label x:Name="lblWeight" Content="Weight:" HorizontalAlignment="Left" Margin="317,67,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblHeight" Content="Height:" HorizontalAlignment="Left" Margin="317,98,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtWeight" HorizontalAlignment="Left" Margin="372,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Margin="372,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image HorizontalAlignment="Left" Height="209" Margin="353,160,0,0" VerticalAlignment="Top" Width="310"/>
        <Button x:Name="btnChgView" Content="Change View" HorizontalAlignment="Left" Margin="561,83,0,0" VerticalAlignment="Top" Height="28" Width="115"/>

    </Grid>
</Window>
