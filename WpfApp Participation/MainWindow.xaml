<Window x:Class="WpfApp_Participation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Participation"
        mc:Ignorable="d"
        Title="My First WPF Application" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://upload.wikimedia.org/wikipedia/en/2/27/Bliss_%28Windows_XP%29.png"/>
    </Window.Background>
    <Grid Margin="0,0,-19,-6">
        <Label Content="My 1st WPF Appy" HorizontalAlignment="Left" Margin="311,332,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Arial Black" Background="#FFDD2D2D" Foreground="#FF230A76"/>
        <Button x:Name="btnSubmit" Content="CLICK ME" HorizontalAlignment="Left" Margin="48,245,0,0" VerticalAlignment="Top" Height="72" Width="170" Background="#FFFB8181" FontFamily="Algerian" FontSize="40" Click="btnSubmit_Click"/>
        <Label x:Name="lblMessage" Content="lblMessage" HorizontalAlignment="Left" Margin="227,132,0,0" VerticalAlignment="Top"/>
        <Label x:Name ="lblOUtput" Content="Label" HorizontalAlignment="Left" Margin="311,176,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
